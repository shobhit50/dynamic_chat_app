<% layout("layouts/boilerplate.ejs") -%>
    <title>Dymanic-Chat</title>

    <body id="chat-app">
        <div class="continer">
            <div class="continer-box">
                <nav> <span><i class="fa-brands fa-whatsapp"></i>
                        <% if (user) { %>
                            <%= user.username %>
                                <% } else { %>
                                    chat-box
                                    <% } %>
                    </span>
                    <div class="links">
                        <a href="/community"> <img style=" height: min-content; width: min-content;"
                                src="/assits/community-outline.png" alt="">
                        </a>
                        <a href="/new-chat"> <img style=" height: min-content; width: min-content;"
                                src="/assits/new-chat-outline.png" alt="">
                        </a>
                        <div class="dropdown">
                            <a href="#">
                                <img style="height: min-content; width: min-content;" src="/assits/menu.png" alt="">
                            </a>
                            <div class="dropdown-container">
                                <a href="./userLogin">Log in</a>
                                <a href="#">Dropdown Item 2</a>

                            </div>
                        </div>
                    </div>
                </nav>
                <div class="chat-box2">

                    <div class="message2 left2">
                        Namaste wellcome sir &#10084;&#65039;
                    </div>
                    <% for (const chat of chats) { %>
                        <div
                            class="message2 <%= chat.sender._id.toString() === current.id.toString() ? 'right2' : 'left2' %>">
                            <%= chat.sender.username===current.username ? 'you' : chat.sender.username%>: <%=
                                    chat.message %>
                        </div>
                        <% } %>
                </div>
                <div class="input">
                    <form style="display: flex; gap: 0.5rem;" id="send-container2" action="#">
                        <input class="form-control mr-sm-2 " id="messageInput" type="search"
                            placeholder="Type a message" aria-label="Search" receiverId="<%= user.id %>">
                        <button id="submit" style="border: none;background-color: white;" type="submit"><img
                                src="/assits/send.png" alt=""></button>
                    </form>

                </div>
            </div>


