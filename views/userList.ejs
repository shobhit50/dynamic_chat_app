<% layout("layouts/boilerplate.ejs") -%>
    <title>Dymanic-Chat</title>

    <body>
        <div class="continer">
            <div class="continer-box">
                <nav> <span><i class="fa-brands fa-whatsapp"></i>
                        <% if (user) { %>
                            <%= user %>
                                <% } else { %>
                                    chat-box
                                    <% } %>
                    </span>
                    <div class="links">
                        <a href="/community"> <img style=" height: min-content; width: min-content;"
                                src="/assits/community-outline.png" alt="">
                        </a>
                        <a href="new-chat"> <img style=" height: min-content; width: min-content;"
                                src="/assits/new-chat-outline.png" alt="">
                        </a>
                        <div class="dropdown">
                            <a href="#">
                                <img style="height: min-content; width: min-content;" src="/assits/menu.png" alt="">
                            </a>
                            <div class="dropdown-container">
                                <a href="./userLogin">Log in</a>
                                <a href="#">Dropdown Item 2</a>

                            </div>
                        </div>
                    </div>
                </nav>
                <!-- here user list -->
                <div class="user-list">
                    <% for (const user of chat ) { %>
                        <div class="user" onclick="window.location.href='/Chat/<%= user.id %>'">
                            <div class="user-img">
                                <i class="fa-regular fa-circle-user"></i>
                            </div>
                            <div class="user-name">
                                <h6>
                                    <%= user.username %>
                                </h6>
                                <div class="status">
                                    <%= user.status %>
                                </div>
                            </div>
                        </div>
                        <% } %>



                </div>
            </div>
        </div>


